    {
      "id": 3,
      "type": "stat",
      "title": "High Priority Alerts",
      "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
      "targets": [{
        "datasource": {"type": "elasticsearch", "uid": "P31C819B24CF3C3C7"},
        "refId": "A",
        "metrics": [{
          "type": "count",
          "id": "1"
        }],
        "bucketAggs": [],
        "query": "{\"query\": {\"term\": {\"severity.keyword\": \"HIGH\"}}}",
        "timeField": "@timestamp"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "blue"},
