      "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
      "targets": [{
        "datasource": {"type": "elasticsearch", "uid": "P31C819B24CF3C3C7"},
        "refId": "A",
        "metrics": [{
          "type": "avg",
          "field": "risk_score",
          "id": "1"
        }],
        "bucketAggs": [],
        "query": "threat-alerts",
        "timeField": "@timestamp"
      }],
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 75, "color": "red"}
            ]
          },
          "color": {"mode": "thresholds"},
          "unit": "short",
          "decimals": 1
